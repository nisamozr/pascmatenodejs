{{>timelineHeader}}
<section>
    <div class="gap gray-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row" id="page-contents">

                        {{>leftside}}
                        <div class="col-lg-6">
                            <div class="central-meta">
                                <div class="editing-info">
                                    <h5 class="f-title"><i class="ti-info-alt"></i> Edit work & Education</h5>

                                    <form action="/editeducation" method="post">
                                       
                                        <div class="form-group">
                                            <input type="text" id="input" name="Collegename" required="required" value="{{user.Education.[0]}}" />
                                            <label class="control-label" for="input">College Name</label><i
                                                class="mtrl-select"></i>
                                        </div>
                                       
                                        <div class="form-group">
                                            <input type="text" name="Course" required="required" value="{{user.Education.[1]}}"/>
                                            <label class="control-label" for="input">Course</label><i
                                                class="mtrl-select"></i>
                                        </div>
                                       
                                        <div class="form-group">
                                           <input type="text" name="Educationstatus" required="required" value="{{user.Education.[2]}}" />
                                            <label class="control-label" for="input">Education Status</label><i
                                                class="mtrl-select"></i>
                                        </div>
                                        
                                        <div class="submit-btns">
                                           
                                          
												<button type="submit" class="mtr-btn" onclick="return confirm('Make sure Enter details are currect ?')"><span>Update</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                        {{>rightside}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>